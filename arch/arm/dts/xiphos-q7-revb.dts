/dts-v1/;
#include "zynq-7000.dtsi"

/ {
	model = "Q7-revB";
	compatible = "xlnx,zynq-zed", "xlnx,zynq-7000";

	aliases {
		ethernet0 = &gem0;
		serial0 = &uart0;
		serial1 = &uart1;
		spi0 = &qspi;
		mmc0 = &sdhci0;
		mmc1 = &sdhci1;
	};

	memory {
		device_type = "memory";
		reg = <0x0 0x20000000>;
	};

	chosen {
		bootargs = "earlyprintk";
		stdout-path = "serial0:115200n8";
	};

	usb_phy0: phy0 {
		compatible = "usb-nop-xceiv";
		#phy-cells = <0>;
	};
};

&clkc {
	ps-clk-frequency = <33333333>;
};

&gem0 {
	status = "okay";
	phy-mode = "rgmii-id";
	phy-handle = <&ethernet_phy>;

	ethernet_phy: ethernet-phy@0 {
		reg = <1>;
	};
};

&qspi {
	status = "okay";
	is-dual = <0>;
	num-cs = <2>;
	flash: flash@0 {
		compatible = "spi-flash";
		reg = <0x0>;
		spi-tx-bus-width = <1>;
		spi-rx-bus-width = <4>;
		spi-max-frequency = <75000000>;
		#address-cells = <1>;
		#size-cells = <1>;

		qspi0@0 {
			reg = <0x00000000 0x08000000>;
		};

		qspi0-nom@1 {
			reg = <0x00000000 0x04000000>;
		};
		qspi0-nom-xscinfo@2 {
			reg = <0x00000000 0x00020000>;
		};
		qspi0-nom-fw@3 {
			/* 10MiB */
			reg = <0x00020000 0x00A00000>;
		};
		qspi0-nom-rootfs@4 {
			reg = <0x00A20000 0x035E0000>;
		};
	};
};

&sdhci0 {
	u-boot,dm-pre-reloc;
	status = "okay";
};

&uart1 {
	u-boot,dm-pre-reloc;
	status = "okay";
};

&qspi {
	status = "okay";
};

&usb0 {
	status = "okay";
	dr_mode = "host";
	usb-phy = <&usb_phy0>;
};
